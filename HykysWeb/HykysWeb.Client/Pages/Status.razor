@page "/server-status"
@inject HttpClient Http
@rendermode InteractiveAuto

<section class="status-hero">
    <h1 class="">Status serverů</h1>
</section>
<div class="server-panel">
    <div class="status-category">
        <h1>Minecraft</h1>
        <div class="status-grid">
            <div class="status-card card">
                <h2>⚙️ Správa pro hráče</h2>
                @if (tunnelOnline != null)
                {
                    @if (tunnelOnline == true)
                    {
                        <p>Status: <span style="color:green"><strong>Online</strong></span></p>
                    }
                    else
                    {
                        <p>Status: <span style="color:darkred"><strong>Offline</strong></span></p>
                    }
                }
                else
                {
                    <p>Loading.....</p>
                }

                <button class="btn-primary" @onclick="CheckTunnel">Refresh</button>
            </div>

            <div class="status-card card">
                <h2>⛏️ Minecraft Server Info</h2>
                @if (mcData != null)
                {
                    @if (mcData.IsOnline)
                    {
                        <p>Ip Status: <span style="color:@tunnelColor; font-weight:bold">@tunnelStatus</span></p>
                        <p>Status: <span style="color:green; font-weight:bold">Online</span></p>
                        <p>Hráči: @mcData.Players / @mcData.MaxPlayers</p>
                        <p>Verze: @mcData.Version</p>
                    }
                    else
                    {
                        <p>Status: <span style="color:red; font-weight:bold">Offline</span></p>
                    }
                }
                else
                {
                    <p>Loading.....</p>
                }
                <button class="btn-primary" @onclick="CheckMinecraft">Refresh</button>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }
            </div>

            <div class="status-card card">
                <h2>🗺️ Minecraft server map</h2>
                @if (mapResponse != null)
                {
                    @if (mapResponse.IsOnline)
                    {
                        <p>Status: <span style="color:green"><strong>Online</strong></span></p>
                        <a href="https://mc-map.hykys.eu" class="btn-ghost">Otevřít mapu</a>
                    }
                    else
                    {
                        <p>Status: <span style="color:darkred"><strong>Offline</strong></span></p>
                    }
                }
                else
                {
                    <p>Loading.....</p>
                }

                <button class="btn-primary" @onclick="CheckMcMap">Refresh</button>
            </div>

        </div>
    </div>

   

   

</div>


@code {
    private bool? tunnelOnline = null;
    private string tunnelStatus = "Loading.....";
    private string tunnelColor = "var(--text - secondary)";
    private McStatusResponse? mcData;
    private string errorMessage = string.Empty;
    private WebResponse? mapResponse;

    protected override async Task OnInitializedAsync()
    {
        _ = LoadDataAsync();

    }

    private async Task LoadDataAsync()
    {
        var t1 = CheckTunnel();
        var t2 = CheckMinecraft();
        var t3 = CheckMcMap();

        await Task.WhenAll(t1, t2, t3);
    }

    private async Task CheckMcMap()
    {
        mapResponse = null;
        StateHasChanged();
        try
        {
            errorMessage = string.Empty;
            mapResponse = await Http.GetFromJsonAsync<WebResponse>("api/ServerStatus/check-web?url=mc-map.hykys.eu");
        }
        catch (Exception ex)
        {
            errorMessage = "Error: " + ex.Message;
            Console.WriteLine(ex);
        }

        StateHasChanged();
    }

    private async Task CheckTunnel()
    {
        tunnelOnline = null;
        tunnelStatus = "Loading.....";
        tunnelColor = "var(--text - secondary)";
        StateHasChanged();
        try
        {
            errorMessage = string.Empty;
            var response = await Http.GetFromJsonAsync<PortResponse>("api/ServerStatus/check-port?ip=mcStatus&port=25565");
            tunnelOnline = response?.IsOnline ?? false;
        }
        catch (Exception ex)
        {
            errorMessage = "Error: " + ex.Message;
            Console.WriteLine(ex);
        }
        if (tunnelOnline == true)
        {
            tunnelStatus = "Online";
            tunnelColor = "green";
        }
        else
        {
            tunnelStatus = "Offline";
            tunnelColor = "red";
        }

        StateHasChanged();
    }

    private async Task CheckMinecraft()
    {
        mcData = null;
        StateHasChanged();
        try
        {
            var response = await Http.GetFromJsonAsync<McStatusResponse>("api/ServerStatus/mc-status?ip=10.0.1.227&port=25565");
            mcData = response;
        }
        catch(Exception ex)
        {
            errorMessage = "Error: " + ex.Message;
            Console.WriteLine(ex);
        }

        StateHasChanged();
    }


    class PortResponse
    {
        public bool IsOnline { get; set; }
        public string Message { get; set; }
    }
    class WebResponse
    {
        public bool IsOnline { get; set; }
        public int StatusCode { get; set; }
        public string Message { get; set; }
    }
    class McStatusResponse
    {
        public bool IsOnline { get; set; }
        public string Players { get; set; }
        public string MaxPlayers { get; set; }
        public string Version { get; set; }
    }
}
